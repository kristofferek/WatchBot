@model WatchBot.Models.PreviewItem
  
<div class="col-xs-4 col-sm-3 col-lg-2 poster">
    <div>
        @if (Model.IsAMovie)
        {
            <a href="@Url.Action("Movie", "Home", new {id = Model.Id.ToString()})">
                <img class="img-responsive movie-thumbnail" src="@Model.Poster"/>
                <div class="overlay">
                    <p>
                        <span class="text-bold">@Model.Title</span><br/>(@Model.ReleaseDate.Split('-')[0])
                    </p>
                </div>
            </a>
        }
        else
        {
            <a href="@Url.Action("TvShow", "TV", new {id = Model.Id.ToString()})">
                <img class="img-responsive movie-thumbnail" src="@Model.Poster" />
                <div class="overlay">
                    <p>
                        <span class="text-bold">@Model.Title</span><br />(@Model.ReleaseDate.Split('-')[0])
                    </p>
                </div>
            </a>
        }
    </div>
</div>